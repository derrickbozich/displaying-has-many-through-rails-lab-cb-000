<p><%= @doctor.name %></p>
<p><%= @doctor.department %></p>
<ul>
  <p><%= @doctor.appointments.each do |appt| %></p>
    <li><%= appt.appointment_datetime.to_date %></li>
    <li><%= appt.appointment_datetime.to_time %></li>

    <li><%=  link_to appt.patient.name, patient_path(appt.patient) %></li>
  <% end %>
</ul>
